@page
@model RetailMonolith.Pages.Chat.IndexModel
@{
    ViewData["Title"] = "AI Shopping Assistant";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <h1 class="mb-4">
                <i class="bi bi-robot"></i> AI Shopping Assistant
            </h1>
            <p class="lead">Ask me anything about our products, and I'll help you find what you need!</p>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-lg-8">
            <!-- Chat Container -->
            <div class="card shadow-sm">
                <div class="card-body">
                    <div id="chat-messages" class="chat-messages-container mb-3">
                        <div class="text-center text-muted py-5">
                            <i class="bi bi-chat-dots" style="font-size: 3rem;"></i>
                            <p class="mt-3">Start a conversation! Try asking:<br/>
                            "Show me laptops under $1000"<br/>
                            "What smartphones do you have?"<br/>
                            "I need a camera for photography"</p>
                        </div>
                    </div>

                    <form id="chat-form" asp-page-handler="SendMessage" method="post">
                        <div class="input-group">
                            <input type="text" 
                                   id="user-input" 
                                   name="message" 
                                   class="form-control" 
                                   placeholder="Type your message here..."
                                   autocomplete="off"
                                   required />
                            <button class="btn btn-primary" type="submit" id="send-btn">
                                <i class="bi bi-send"></i> Send
                            </button>
                        </div>
                        @Html.AntiForgeryToken()
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4 mt-4 mt-lg-0">
            <!-- Recommendations Panel -->
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-stars"></i> AI Recommendations</h5>
                </div>
                <div class="card-body" id="recommendations-panel">
                    <p class="text-muted text-center py-4">Ask me about products and I'll suggest the best options for you!</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/chat.js"></script>
}
